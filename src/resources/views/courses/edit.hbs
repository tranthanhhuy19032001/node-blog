<div class="mt-4">
    <form method="POST" action="/courses/{{courses._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{courses.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea type="text" class="form-control" id="description"
                name="description">{{courses.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{courses.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" value="{{courses.level}}" id="level" name="level">
        </div>

        <button type="submit" class="btn btn-primary mt-3">Lưu</button>
    </form>
</div>